import java.util.*;
public class Dvgs {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=0;
        while(a>0 && b>0){
            c++;
            a--;
            b--;
        }
        int s=(a+b)/2;
        System.out.println(c+" "+s);
        sc.close();
    }
}